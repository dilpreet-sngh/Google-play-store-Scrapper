<div>
  <div class="col-md-2">
    <%= image_tag @app.image_url %>
  </div>

  <div class="col-md-2" style="margin-top: 50px;">
    <h3>Rating: <%= @app.rating %></h3>
  </div>
</div>

<div class="col-md-12">
  <h2>Reviews:</h2>

  <% @app.reviews.each do |review| %>
    <div class="alert alert-notice">
      <div class="right">
        <b><%= review.user_name %></b>
      </div>
      <div class="left">
        <%= review.message %>
      </div>
    </div>
  <% end %>
</div>